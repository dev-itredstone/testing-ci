modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = """
echo "🚀 Starting PayrollPro with periodic auto-commit..."

# Start periodic auto-commit in background
(
  while true; do
    sleep 30  # Check every 30 seconds
    git config user.name "dev-itredstone"
    git config user.email "dev.itredstone@gmail.com"

    if ! git diff --quiet || ! git diff --cached --quiet; then
      echo "💾 Auto-committing changes..."
      git add .
      git commit -m "🌀 Auto-commit from Replit on $(date '+%Y-%m-%d %H:%M:%S')" 2>/dev/null
      git push origin main 2>/dev/null && echo "🚀 Pushed to remote" || echo "❌ Push failed"
    fi
  done
) &

# Start the main application
npm run dev
"""
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

[nix]
channel = "stable-24_05"

[deployment]
deploymentTarget = "autoscale"
build = ["npm", "run", "build"]
run = ["sh", "-c", "npm run start"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]
runButton = "Run PayrollPro"

# Keep your existing workflows...
[[workflows.workflow]]
name = "Manual Git Commit"
author = 39972109
mode = "sequential"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = """
git config user.name "dev-itredstone"
git config user.email "dev.itredstone@gmail.com"
git add .
git commit -m "🌀 Manual commit from Replit" || echo "No changes to commit"
git push origin main || echo "❌ Push failed"
"""
