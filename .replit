modules = ["nodejs-20", "web", "postgresql-16", "python-3.11"]
run = """
echo "üöÄ Starting PayrollPro with auto-commit..."

# Start background file watcher
(
  echo "üîç Starting file watcher..."
  while true; do
    # Wait for file changes (excluding git, node_modules, dist)
    inotifywait -r -e modify,create,delete,move . \
      --exclude='(\\.git|node_modules|dist|\\.replit)' 2>/dev/null || sleep 1

    echo "üìÅ File change detected, waiting 3 seconds for more changes..."
    sleep 3

    # Configure git
    git config user.name "dev-itredstone"
    git config user.email "dev.itredstone@gmail.com"

    # Check if there are actually changes to commit
    if ! git diff --quiet || ! git diff --cached --quiet; then
      echo "üíæ Committing changes..."
      git add .
      if git commit -m "üåÄ Auto-commit from Replit on $(date '+%Y-%m-%d %H:%M:%S')"; then
        echo "‚úÖ Changes committed"
        if git push origin main 2>/dev/null; then
          echo "üöÄ Changes pushed to remote"
        else
          echo "‚ùå Push failed (check auth/network)"
        fi
      fi
    else
      echo "‚ÑπÔ∏è No actual changes to commit"
    fi
  done
) &

# Start the main application
npm run dev
"""
hidden = [".config", ".git", "generated-icon.png", "node_modules", "dist"]

